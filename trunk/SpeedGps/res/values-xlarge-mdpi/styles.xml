<resources>
    <style name="StartupTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="DividerFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffcccccc</item>
    </style>
    <style name="CaptionFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="HintFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffcccccc</item>
    </style>
    <style name="CurrentCaptionFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="CurrentValueFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffcccccc</item>
    </style>
